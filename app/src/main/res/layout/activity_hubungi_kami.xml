<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff"
    tools:context="id.suksesit.pensil.HubungiKamiActivity">

    <ImageView
        android:id="@+id/pictSaran"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_saran"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/pictSaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="Hubungi kami\nuntuk memberikan komentar dan saran dalam rangka pengembangan aplikasi yang lebih baik\n\nbisnis.aplikasi99@gmail.com"/>

</RelativeLayout>
